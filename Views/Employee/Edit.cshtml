
@model HrmSystem.Models.Employee

@{
    ViewData["Title"] = "Edit";
}
<div class="container">

    <div class="row">

        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Edit Employee</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">

                        <div class="form-group">
                            <label asp-for="EmployeeID"></label>
                            <input type="hidden" asp-for="EmployeeID" />
                            <input type="text" asp-for="EmployeeID" class="form-control"
                                   placeholder="Enter Employee Id" />


                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input type="text" asp-for="FirstName" class="form-control"
                                   placeholder="Enter Employee Firstname" />
                        </div>
                       
                        <div class="form-group">
                            <label asp-for="Salary"></label>
                            <input type="text" asp-for="Salary" class="form-control"
                                   placeholder="Enter Employee Salary" />
                        </div>
                        <div class="form-group">
                            <input type="submit" style="height:30px;width:100px" value="Submit" class="btn btn-sm btn-outline-success float-right" />
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
