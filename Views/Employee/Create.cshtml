@model HrmSystem.Models.Employee


@{
    ViewData["Title"] = "Create";
}

<div class="container">

    <div class="row">

        <div class="col-6 offset-3">

            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add Employee</h1>
                    <p class="text-center text-danger">]</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">


                        <div class="form-group">
                            <label asp-for="EmployeeID"></label>
                            <input type="text" asp-for="EmployeeID" class="form-control"
                                   placeholder="Enter EmployeeID" />
                            <span asp-validation-for="EmployeeID" class="text-danger"></span>


                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input type="text" asp-for="FirstName" class="form-control"
                                   placeholder="Enter Employee Name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Company"></label>
                            <input type="text" asp-for="Company" class="form-control"
                                   placeholder="Enter Employee Company" />
                            <span asp-validation-for="Company" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="Department"></label>
                            <input type="text" asp-for="Department" class="form-control"
                                   placeholder="Enter Employee Department" />
                            <span asp-validation-for="Department" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="Designation"></label>
                            <input type="text" asp-for="Designation" class="form-control"
                                   placeholder="Enter Employee Designation" />
                            <span asp-validation-for="Designation" class="text-danger"></span>

                        </div>



                        <div class="form-group">
                            <label asp-for="Salary"></label>
                            <input type="text" asp-for="Salary" class="form-control"
                                   placeholder="Enter Employee Salary" />
                            <span asp-validation-for="Salary" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <input type="submit" style="height:30px;width:100px" value="Submit" class="btn btn-sm btn-outline-success float-right" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
   </div>

   

